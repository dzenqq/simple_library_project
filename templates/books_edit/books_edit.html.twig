{% extends 'base.html.twig' %}

{% block body %}
<div class="col">
<h1>{{page_title}}</h1>
</div>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<div class="col p-3">
</div>
<div class="col">
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
{{ form_end(form) }}
</div>
<div class="col">
<a href="{{path('app_bookslist_show_books_list')}}">Вернуться к списку книг</a>
</div>
{% endblock %}
